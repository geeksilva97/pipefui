<h1>Form Answers</h1>

<table>
  <thead>
    <tr>
      <th>Preview</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td> <%= answer.preview %></td>
        <td>
          <%= link_to 'Full Answer', form_full_answer_path(answer.form, answer) %>
          <%= link_to 'Delete', form_path(answer.id), method: 'delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
